@model IEnumerable<ClothesStore.Models.ShoppingCart>

@{
    ViewBag.Title = "Index";
}

<!--h2>Index</h2-->


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DateCreated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sum)
        </th>
        <th>
            Check Out Completed
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DateCreated)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sum)€
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsPaid)
        </td>

        <td>
            
            @Html.ActionLink("Details", "Details", new { id = item.ShoppingcartId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ShoppingcartId })
        </td>

    </tr>
}

</table>
