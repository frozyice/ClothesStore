@model IEnumerable<ClothesStore.Models.ShoppingCart>

@{
    ViewBag.Title = "Index";
}

<h2>Purchase History</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DateCreated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sum)
        </th>
        <th>
            Check Out Completed
        </th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DateCreated)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sum)€
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsPaid)
        </td>

       
        <td>
            <input type="button" class="btn btn-default" value="Details" onclick="location.href='@Url.Action("Details","ShoppingCarts",new { id = item.ShoppingcartId })'" />
        </td>
        <td>
            @if (!item.IsPaid)
            {
                <input type="button" class="btn btn-danger" value="Delete" onclick="location.href='@Url.Action("Delete", "ShoppingCarts", new { id = item.ShoppingcartId })'" />
            }
        </td>

    </tr>
}

</table>
